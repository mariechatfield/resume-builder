{{#if resume}}
  <div class="resume">
    <div class="section header">
      <h1 class="name">{{resume.header.name}}</h1>
      {{#if resume.header.subtitle}}
        <h2 class="subtitle">{{resume.header.subtitle}}</h2>
      {{/if}}
      <div class="columns">
        <div class="columns__left">
          <div>{{resume.header.phone}}</div>
          <div>{{resume.header.location}}</div>
        </div>
        <div class="columns__right">
          {{#each resume.header.links as |link|}}
            {{markdown-to-html link}}
          {{/each}}
        </div>
      </div>
    </div>

    <div class="section">
      <h3 class="section__title">Experience</h3>

      {{#each resume.experience as |job|}}
        <div class="section__subsection">
          <div class="columns">
            <div class="columns__left">
              <div><strong>{{job.company}}</strong></div>
              <div><em>{{job.title}}</em></div>
            </div>
            <div class="columns__right">
              <div><strong>{{job.location}}</strong></div>
              <div>{{job.date}}</div>
            </div>
          </div>
          {{#each job.roles as |role|}}
            <div class="columns">
              <div class="columns__left"><em>{{role.title}}</em></div>
              <div class="columns__right">{{role.date}}</div>
            </div>
          {{/each}}

          <ul class="list">
            {{#each job.details as |detail|}}
              <li class="list__item">
                {{#if (is-string detail)}}
                  {{markdown-to-html detail}}
                {{/if}}
              </li>
            {{/each}}
          </ul>
        </div>
      {{/each}}
    </div>

    {{#if resume.projects}}
      <div class="section">
        <h3 class="section__title">Projects</h3>
        {{#each resume.projects as |project|}}
          <div class="section__subsection">
            <div class="columns">
              <div class="columns__left">
                <div><strong>
                  {{#if (is-string project.name)}}
                    {{markdown-to-html project.name}}
                  {{/if}}
                </strong></div>
              </div>
              <div class="columns__right">
                <div>{{project.date}}</div>
              </div>
            </div>
            <ul class="list">
              {{#each project.details as |detail|}}
                <li class="list__item">
                  {{#if (is-string detail)}}
                    {{markdown-to-html detail}}
                  {{/if}}
                </li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>
    {{/if}}

    {{#if resume.talks}}
      <div class="section">
        <h3 class="section__title">Talks & Blogs</h3>
        <div class="section__subsection">
          <ul class="list">
            {{#each resume.talks as |talk|}}
                <li class="list__item">
                  <div class="columns">
                    <div class="columns__left"><strong>{{markdown-to-html talk.title}}</strong></div>
                    <div class="columns__right"><em>{{markdown-to-html talk.venue}}</em></div>
                  </div>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/if}}

    <div class="section">
      <h3 class="section__title">Education</h3>

      <div class="columns">
        <div class="columns__left">
          <div><strong>{{resume.education.school}}</strong></div>
          <div>{{resume.education.degree}}</div>
        </div>
        <div class="columns__right">
          <div><strong>{{resume.education.location}}</strong></div>
          <div>{{resume.education.graduationDate}}</div>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="resume">
    <h1>Oops! Looks like your resume might not have valid data.</h1>
  </div>
{{/if}}